{
  "manifest_version": 3,
  "name": "Auto Refresh Extension",
  "description": "Automatically refreshes the tab randomly or at specified intervals.",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "permissions": ["activeTab", "storage"]
}
